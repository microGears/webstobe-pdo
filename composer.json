{
  "name": "microgears/webstone-pdo",
  "type": "library",
  "description": "Wrapper around PDO that defines a simple and consistent interface for accessing databases in PHP.",
  "keywords": [
    "microGears",
    "webstone-pdo"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Maxim Kirichenko",
      "email": "kirichenko.maxim@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2|^8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "ext-simplexml": "*",
    "microgears/webstone-stdlib": "^1.0",
    "microgears/webstone-cache": "^1.0"
  },
  "autoload": {
    "psr-4": {"WebStone\\PDO\\": "src"}
  },
  "autoload-dev": {
    "psr-4": {"WebStone\\PDO\\Tests\\": "tests"}
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "chronolog/chronolog": "^1.0"
  }
}
